source "http://rubygems.org"

gem 'rails', '~> 3.2.0'

gem "haml-rails"
gem 'jquery-rails'
gem "formtastic"
gem "will_paginate"

gem "mysql2"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier', '>= 1.0.3'
end

group :test do
  gem "rspec"
  gem "rspec-rails"
  gem "cucumber"
  gem "cucumber-rails"
  gem "capybara"
  gem "shoulda"
  gem "factory_girl"
  gem "evergreen"
  gem "database_cleaner"
end

# Specify your gem's dependencies in ..gemspec
gemspec
